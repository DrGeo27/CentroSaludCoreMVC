@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

<p>
    <a asp-action="Create" class="btn btn-lg btn-dark">Nuevo rol</a>
</p>

@{
    if (Model.Count() < 1)
    {
        <p class="text-danger">No hay roles en la base de datos</p>
    }

    else
    {
        <h2 class="text-dark text-lg-center font-weight-bold">Índice de roles</h2>

        <table class="table table-striped table-bordered table-hover table-dark text-center">
            <thead>
                <tr>
                    <th>Rol</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rol in Model)
                {
                    <tr>
                        <td>@rol.Name</td>
                        <td>
                            <a asp-controller="Role" asp-action="Delete" class="btn btn-outline-danger disabled">Eliminar rol</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}