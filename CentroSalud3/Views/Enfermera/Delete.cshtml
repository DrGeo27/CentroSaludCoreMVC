@model CentroSalud3.Models.Enfermera

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar</title>
</head>

<body>
    <h3 class="text-danger text-lg-center">¿Está seguro de que quiere eliminar a esta enfermera?</h3>

    <div>
        <h4 class="text-danger">Enf. @Model.EnfermeraNombre</h4>

        <hr />

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EnfermeraNombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EnfermeraNombre)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EnfermeraConsulta)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EnfermeraConsulta)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EnfermeraTelefono)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EnfermeraTelefono)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EnfermeraEmail)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EnfermeraEmail)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EnfermeraNumPacientes)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EnfermeraNumPacientes)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="EnfermeraId" />
            <input type="submit" value="Eliminar" class="btn btn-outline-danger" />
            <a asp-action="Index" class="btn btn-info font-weight-bold">Atrás</a>
        </form>
    </div>
</body>
</html>
