@model CentroSalud3.Models.Enfermera

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Nueva enfermera</title>
</head>

<body>
    <h4 class="text-info">Nueva enfermera</h4>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="EnfermeraNombre" class="control-label"></label>
                    <input asp-for="EnfermeraNombre" class="form-control" />
                    <span asp-validation-for="EnfermeraNombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EnfermeraConsulta" class="control-label"></label>
                    <input asp-for="EnfermeraConsulta" class="form-control" />
                    <span asp-validation-for="EnfermeraConsulta" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EnfermeraTelefono" class="control-label"></label>
                    <input asp-for="EnfermeraTelefono" class="form-control" />
                    <span asp-validation-for="EnfermeraTelefono" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EnfermeraEmail" class="control-label"></label>
                    <input asp-for="EnfermeraEmail" class="form-control" />
                    <span asp-validation-for="EnfermeraEmail" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EnfermeraNumPacientes" class="control-label"></label>
                    <input asp-for="EnfermeraNumPacientes" class="form-control" readonly="readonly" value="0" />
                    <span asp-validation-for="EnfermeraNumPacientes" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Confirmar" class="btn btn-success" />
                    <button type="reset" class="btn btn-warning">Reiniciar</button>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-outline-danger">Atrás</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
