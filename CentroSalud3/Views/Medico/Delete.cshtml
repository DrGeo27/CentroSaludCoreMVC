@model CentroSalud3.Models.Medico

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar</title>
</head>

<body>
<h3 class="text-danger text-lg-center">¿Está seguro de que quiere eliminar a este médico?</h3>

<div>
    <h4 class="text-danger">Dr. @Model.MedicoNombre</h4>

    <hr />

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MedicoNombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MedicoNombre)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MedicoConsulta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MedicoConsulta)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MedicoTelefono)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MedicoTelefono)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MedicoEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MedicoEmail)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumPacientes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumPacientes)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MedicoId" />
        <input type="submit" value="Eliminar" class="btn btn-outline-danger" />
        <a asp-action="Index" class="btn btn-primary font-weight-bold">Atrás</a>
    </form>
</div>
</body>
</html>
