@using CentroSalud3.Models
@model IEnumerable<Medico>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>

<body>
    <h2 class="text-primary text-lg-center font-weight-bold">Cartera de médicos</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary btn-lg">Nuevo médico</a>
    </p>

    <table class="table table-striped table-bordered table-hover table-primary text-center">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.MedicoNombre)</th>
                <th>@Html.DisplayNameFor(model => model.MedicoConsulta)</th>
                <th>@Html.DisplayNameFor(model => model.MedicoTelefono)</th>
                <th>@Html.DisplayNameFor(model => model.MedicoEmail)</th>
                <th>@Html.DisplayNameFor(model => model.NumPacientes)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>
                        @m.MedicoNombre &nbsp; 
                        <a asp-controller="Paciente" asp-action="PacienteAsignacionMedico"
                           asp-route-id="@m.MedicoId"
                           class="btn btn-outline-secondary btn-sm">Asignar paciente
                        </a>
                    </td>
                    <td>@m.MedicoConsulta</td>
                    <td>@m.MedicoTelefono</td>
                    <td>@m.MedicoEmail</td>
                    <td>@m.NumPacientes &nbsp;
                        <a asp-controller="Paciente" asp-action="TodosPacientesConMedico"
                           asp-route-id="@m.MedicoId" class="btn btn-outline-secondary btn-sm">
                            Ver pacientes
                        </a>
                    </td>

                    <td class="btn-group-sm">
                        <a asp-action="Details" asp-route-id="@m.MedicoId" class="btn btn-outline-primary text-dark">Detalles</a>
                        <a asp-action="Edit" asp-route-id="@m.MedicoId" class="btn btn-outline-warning text-dark">Editar</a>
                        <a asp-action="Delete" asp-route-id="@m.MedicoId" class="btn btn-outline-danger text-dark">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
