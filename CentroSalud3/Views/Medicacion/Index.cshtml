@model IEnumerable<CentroSalud3.Models.Medicacion>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>

<body>
    <h2 class="text-success text-lg-center font-weight-bold">Pacientes con medicación</h2>

    <p>
        <a asp-action="Create" class="btn btn-success btn-lg">Nuevo fármaco</a>
    </p>

    <table class="table table-striped table-bordered table-hover table-success text-center">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MedicacionNombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MedicacionDosis)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MedicacionGrupo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MedicacionDescripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumPacientesPautados)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>
                        @m.MedicacionNombre &nbsp;
                        <a asp-controller="Paciente" asp-action="PacienteAsignacionMedicacion"
                           asp-route-id="@m.MedicacionId"
                           class="btn btn-outline-secondary btn-sm">
                            Pautar paciente
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => m.MedicacionDosis)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => m.MedicacionGrupo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => m.MedicacionDescripcion)
                    </td>
                    <td>@m.NumPacientesPautados &nbsp;
                        <a asp-controller="Paciente" asp-action="TodosPacientesConMedicacion"
                           asp-route-id="@m.MedicacionId" class="btn btn-outline-secondary btn-sm">
                            Ver pacientes
                        </a>
                    </td>

                    <td class="btn-group-sm">
                        <a asp-action="Details" asp-route-id="@m.MedicacionId" class="btn btn-outline-success text-dark">Detalles</a>
                        <a asp-action="Edit" asp-route-id="@m.MedicacionId" class="btn btn-outline-warning text-dark">Editar</a>
                        <a asp-action="Delete" asp-route-id="@m.MedicacionId" class="btn btn-outline-danger text-dark">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
