@model CentroSalud3.Models.Medicacion

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalles</title>
</head>

<body>
<div>
    <h4 class="text-success">@Model.MedicacionNombre</h4>

    <hr />

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MedicacionNombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MedicacionNombre)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MedicacionDosis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MedicacionDosis)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MedicacionGrupo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MedicacionGrupo)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MedicacionDescripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MedicacionDescripcion)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumPacientesPautados)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumPacientesPautados)
        </dd>
    </dl>
</div>

<div class="form-group">
    <a asp-action="Edit" asp-route-id="@Model.MedicacionId" class="btn btn-outline-warning">Editar</a>
    <a asp-action="Index" class="btn btn-success">Atrás</a>
</div>
</body>
</html>
