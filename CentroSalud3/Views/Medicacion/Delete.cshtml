@model CentroSalud3.Models.Medicacion

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar</title>
</head>

<body>
<h3 class="text-danger text-lg-center">¿Está seguro de que quiere eliminar esta medicación?</h3>

<div>
    <h4 class="text-danger">@Model.MedicacionNombre</h4>

    <hr />

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MedicacionNombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MedicacionNombre)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MedicacionDosis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MedicacionDosis)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MedicacionGrupo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MedicacionGrupo)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MedicacionDescripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MedicacionDescripcion)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumPacientesPautados)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumPacientesPautados)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MedicacionId" />
        <input type="submit" value="Eliminar" class="btn btn-outline-danger" />
        <a asp-action="Index" class="btn btn-success font-weight-bold">Atrás</a>
    </form>
</div>
</body>
</html>
