@model CentroSalud3.Models.Medicacion

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Nueva medicación</title>
</head>

<body>
    <h4 class="text-success">Nueva medicación</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="MedicacionNombre" class="control-label"></label>
                <input asp-for="MedicacionNombre" class="form-control" />
                <span asp-validation-for="MedicacionNombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MedicacionDosis" class="control-label"></label>
                <input asp-for="MedicacionDosis" class="form-control" />
                <span asp-validation-for="MedicacionDosis" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MedicacionGrupo" class="control-label"></label>
                <select asp-for="MedicacionGrupo" asp-items="Html.GetEnumSelectList<MedicacionGrupo>()" class="form-control"></select>
                <span asp-validation-for="MedicacionGrupo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MedicacionDescripcion" class="control-label"></label>
                <textarea asp-for="MedicacionDescripcion" class="form-control"></textarea>
                <span asp-validation-for="MedicacionDescripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumPacientesPautados" class="control-label"></label>
                <input asp-for="NumPacientesPautados" class="form-control" readonly="readonly" value="0" />
                <span asp-validation-for="NumPacientesPautados" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-success" />
                <button type="reset" class="btn btn-warning">Reiniciar</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-danger">Atrás</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
