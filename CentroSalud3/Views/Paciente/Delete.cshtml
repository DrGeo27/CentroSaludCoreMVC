@model CentroSalud3.Models.Paciente

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar</title>
</head>

<body>
<h3 class="text-danger text-lg-center">¿Está seguro de que quiere eliminar a este paciente?</h3>

<div>
    <h4 class="text-danger">@Model.PacienteNombre</h4>

    <hr />

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PacienteNombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PacienteNombre)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PacienteFxNacimiento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PacienteFxNacimiento)
        </dd>

        @*<dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PacienteEdad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PacienteEdad)
        </dd>*@

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PacienteSexo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PacienteSexo)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PacienteTelefono)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PacienteTelefono)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PacienteEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PacienteEmail)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PacienteId" />
        <input type="submit" value="Eliminar" class="btn btn-outline-danger" />
        <a asp-action="Index" class="btn btn-secondary font-weight-bold">Atrás</a>
    </form>
</div>
</body>
</html>
