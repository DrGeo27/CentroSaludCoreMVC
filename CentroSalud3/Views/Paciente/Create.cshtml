@model CentroSalud3.Models.Paciente

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Nuevo paciente</title>
</head>
<body>

<h4 class="text-secondary">Nuevo paciente</h4>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PacienteNombre" class="control-label"></label>
                <input asp-for="PacienteNombre" class="form-control" />
                <span asp-validation-for="PacienteNombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PacienteFxNacimiento" class="control-label"></label>
                <input asp-for="PacienteFxNacimiento" class="form-control" />
                <span asp-validation-for="PacienteFxNacimiento" class="text-danger"></span>
            </div>

            @*<div class="form-group">
                <label asp-for="PacienteEdad" class="control-label"></label>
                <input asp-for="PacienteEdad" class="form-control" readonly="readonly" value="" />
                <span asp-validation-for="PacienteEdad" class="text-danger"></span>
            </div>*@

            <div class="form-group">
                <label asp-for="PacienteSexo" class="control-label"></label>
                <select asp-for="PacienteSexo" asp-items="Html.GetEnumSelectList<Sexo>()" class="form-control"></select>
                <span asp-validation-for="PacienteSexo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PacienteTelefono" class="control-label"></label>
                <input asp-for="PacienteTelefono" class="form-control" />
                <span asp-validation-for="PacienteTelefono" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PacienteEmail" class="control-label"></label>
                <input asp-for="PacienteEmail" class="form-control" />
                <span asp-validation-for="PacienteEmail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-success" />
                <button type="reset" class="btn btn-warning">Reiniciar</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-danger">Atrás</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>