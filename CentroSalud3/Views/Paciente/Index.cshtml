@model IEnumerable<CentroSalud3.Models.Paciente>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>

<body>
    <h2 class="text-secondary text-lg-center font-weight-bold">Cartera de pacientes</h2>
    <p>
        <a asp-action="Create" class="btn btn-secondary btn-lg">Nuevo paciente</a>
    </p>

    <table class="table table-striped table-bordered table-hover table-secondary text-center">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.PacienteNombre)</th>
                <th>@Html.DisplayNameFor(model => model.PacienteFxNacimiento)</th>
                @*<th>@Html.DisplayNameFor(model => model.PacienteEdad)</th>*@
                <th>@Html.DisplayNameFor(model => model.PacienteSexo)</th>
                <th>@Html.DisplayNameFor(model => model.PacienteTelefono)</th>
                <th>@Html.DisplayNameFor(model => model.PacienteEmail)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => p.PacienteNombre)
                        &nbsp;
                        <a asp-action="PacienteVerMedicacion" asp-route-id="@p.PacienteId" class="btn btn-outline-success btn-sm disabled">
                            Ver medicación
                        </a>
                    </td>
                    <td>@Html.DisplayFor(modelItem => p.PacienteFxNacimiento)</td>
                    @*<td>@Html.DisplayFor(modelItem => p.PacienteEdad)</td>*@
                    <td>@Html.DisplayFor(modelItem => p.PacienteSexo)</td>
                    <td>@Html.DisplayFor(modelItem => p.PacienteTelefono)</td>
                    <td>@Html.DisplayFor(modelItem => p.PacienteEmail)</td>
                    <td class="btn-group-sm">
                        <a asp-action="Details" asp-route-id="@p.PacienteId" class="btn btn-outline-primary text-dark">Detalles</a>
                        <a asp-action="Edit" asp-route-id="@p.PacienteId" class="btn btn-outline-warning text-dark">Editar</a>
                        <a asp-action="Delete" asp-route-id="@p.PacienteId" class="btn btn-outline-danger text-dark">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
