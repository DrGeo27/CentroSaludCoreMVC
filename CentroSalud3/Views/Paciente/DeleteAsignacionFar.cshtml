@model CentroSalud3.Models.PacienteConMedicacion

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar pauta</title>
</head>

<body>
    <h3 class="text-danger text-lg-center">¿Está seguro de que quiere retirarle la pauta al paciente?</h3>

    <div>
        <h4 class="text-danger">@Model.Paciente.PacienteNombre - @Model.Medicacion.MedicacionNombre</h4>

        <hr />

        <dl class="row">
            <dt class="col-sm-2">
                @*@Html.DisplayNameFor(model => model.Paciente.PacienteNombre)*@
                Paciente
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Paciente.PacienteNombre)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Paciente.PacienteFxNacimiento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Paciente.PacienteFxNacimiento)
            </dd>

            @*<dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Paciente.PacienteEdad)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Paciente.PacienteEdad)
                </dd>*@

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Paciente.PacienteSexo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Paciente.PacienteSexo)
            </dd>

            <dt class="col-sm-2">
                @*@Html.DisplayNameFor(model => model.Medicacion.MedicacionNombre)*@
                Medicación
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Medicacion.MedicacionNombre)
            </dd>
        </dl>

        <form asp-action="DeleteAsignacionFar">
            <input type="hidden" asp-for="PacienteConMedicacionId" />
            <input type="submit" value="Retirar" class="btn btn-outline-danger" />
            <a asp-controller="Medicacion" asp-action="Index" class="btn btn-secondary font-weight-bold">Atrás</a>
        </form>
    </div>
</body>
</html>
