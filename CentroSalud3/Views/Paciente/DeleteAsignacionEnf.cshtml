@model CentroSalud3.Models.PacienteConEnfermera

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar asignación</title>
</head>

<body>
    <h3 class="text-danger text-lg-center">¿Está seguro de que quiere eliminar esta asignación?</h3>

    <div>
        <h4 class="text-danger">@Model.Paciente.PacienteNombre - Enf. @Model.Enfermera.EnfermeraNombre</h4>

        <hr />

        <dl class="row">
            <dt class="col-sm-2">
                @*@Html.DisplayNameFor(model => model.Paciente.PacienteNombre)*@
                Paciente
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Paciente.PacienteNombre)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Paciente.PacienteFxNacimiento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Paciente.PacienteFxNacimiento)
            </dd>

            @*<dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Paciente.PacienteEdad)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Paciente.PacienteEdad)
                </dd>*@

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Paciente.PacienteSexo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Paciente.PacienteSexo)
            </dd>

            <dt class="col-sm-2">
                @*@Html.DisplayNameFor(model => model.Enfermera.EnfermeraNombre)*@
                Enfermera
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Enfermera.EnfermeraNombre)
            </dd>
        </dl>

        <form asp-action="DeleteAsignacionEnf">
            <input type="hidden" asp-for="PacienteConEnfermeraId" />
            <input type="submit" value="Eliminar" class="btn btn-outline-danger" />
            <a asp-controller="Enfermera" asp-action="Index" class="btn btn-secondary font-weight-bold">Atrás</a>
        </form>
    </div>
</body>
</html>
